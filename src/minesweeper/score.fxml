<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="minesweeper.controller.ScoreController">
    <headerText>
        Save your score:
    </headerText>

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Time: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="timeLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

</DialogPane>
